{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {
      "url": "https://kadeksatriadi.github.io/vega-lite-examples/examples/seattle-weather.csv"
    },
    "width":"container",
    "transform": [
      {
        "calculate": "datum.temp_max - datum.temp_min",
        "as": "temp_range"
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "date",
        "timeUnit": "month",
        "type": "nominal"
      },
      "y": {
        "aggregate": "count",
        "stack": "normalize"
      },
      "color": {
        "type": "nominal",
        "field": "weather",
        "scale": {
          "domain": [
            "sun",
            "fog",
            "drizzle",
            "rain",
            "snow"
          ],
          "range": [
            "#e7ba52",
            "#c7c7c7",
            "#aec7e8",
            "#1f77b4",
            "#9467bd"
          ]
        },
        "title": "Weather Type", 
        "legend": {
          "orient": "left"
        }
      }
    },
    "config": {}
  }
  